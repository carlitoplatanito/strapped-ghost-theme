{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{>jumbotron}}
{{#get "pages" filter="primary_tag:home"}}
{{#foreach pages}}
<div class="container">
    <div class="row">
        {{#if feature_image}}
            <div class="col-12 col-sm-6">
                <img class="img-fluid"
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="100vw"
                src="{{img_url feature_image size="m"}}"
                alt="{{feature_image_alt}}"
                />
            </div>
        {{/if}}
            <div class="col-12{{#if feature_image}} col-sm-6{{/if}}">
                <h2>{{title}}</h2>
                {{#if custom_excerpt}}
                    <p class="lead" style="white-space: pre;">{{{custom_excerpt}}}</p>
                    <div class="mt-4">
                        <a class="btn btn-outline-primary">Read more</a>
                    </div>
                {{else}}
                    <div class="gh-content">
                        {{{content}}}
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>
{{/foreach}}
{{/get}}
<div class="container">
    <div class="card-group">
        {{#foreach posts}}
            {{> "post-card"}}
        {{/foreach}}
    </div>
</div>