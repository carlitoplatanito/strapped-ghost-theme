<div class="jumbotron {{classes}}"{{#if id}}id="{{id}}"{{/if}}>
    {{#if feature_image}}
        <img class="jumbo-cover"
            srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
            sizes="100vw"
            src="{{img_url feature_image size="xl"}}"
            alt="{{name}}"
        />
    {{/if}}
    <div class="jumbo-container">
        <h1 class="jumbo-title">{{#if title}}{{title}}{{else}}{{name}}{{/if}}</h1>
        {{#if custom_excerpt}}
            <p class="jumbo-description lead">{{{custom_excerpt}}}</p>
        {{else}}
            <p class="jumbo-description lead">{{{description}}}</p>
        {{/if}}
    </div>
</div>