{{!-- This is a partial file used to generate a post "card"
which templates loop over to generate a list of posts. --}}

<article class="card post-card{{#if classes}} {{classes}}{{/if}}{{#unless access}} post-access-{{visibility}}{{/unless}}">
    {{#if feature_image}}
    <figure class="card-img">
        <img
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="(max-width: 1000px) 400px, 800px"
                src="{{img_url feature_image size="m"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                loading="lazy"
        />
    </figure>
    {{/if}}

    <div class="card-body">
        {{#primary_tag}}
        <caption class="card-subtitle post-card-tag"{{#if color}} style="color:{{color}}"{{/if}}>{{name}}</caption>
        {{/primary_tag}}
        <h4 class="card-title post-card-title">{{title}}</h4>
        <section class="post-meta">
            <ul class="list-inline">
                <li class="list-inline-item list-item-date"><time class="post-card-published" datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time></li>
                {{#if authors}}
                    <li class="list-inline-item list-item-authors">{{authors}}</li>
                {{/if}}
                {{#if reading_time}}
                    <li class="list-inline-item list-item-reading-time"><span class="post-card-reading-time">{{reading_time}}</span></li>
                {{/if}}
            </ul>
        </section>
        {{#if excerpt}}
            <p class="card-text post-card-excerpt">{{{excerpt}}}</p>
        {{/if}}

        {{#if @site.comments_enabled}}
            <div class="post-card-comments">
                {{comment_count}}
            </div>
        {{/if}}
        <a class="btn btn-outline-primary stretched-link" href="{{url}}">Read More</a>
    </div>
</article>
