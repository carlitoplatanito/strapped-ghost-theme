{{!-- This is a partial file used to generate a post "card"
which templates loop over to generate a list of posts. --}}

<article class="card post-card{{#if classes}} {{classes}}{{/if}}{{#unless access}} post-access-{{visibility}}{{/unless}}">

    
    {{#if feature_image}}
    <figure class="card-img">
        <img
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="(max-width: 1000px) 400px, 800px"
                src="{{img_url feature_image size="m"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                loading="lazy"
        />
    </figure> 
    {{/if}}

    <div class="card-body">
        {{#primary_tag}}
        <caption class="card-subtitle card-tag-{{slug}} text-muted"{{#if color}} style="color: {{color}}"{{/if}}>{{name}}</caption>
        {{/primary_tag}}
        <h4 class="card-title">{{title}}</h4>
        {{#if excerpt}}
            <p class="card-text">{{excerpt}}</p>
        {{/if}}
        <a href="{{url}}" class="card-link stretched-link">Read more</a>
    
        <div class="card-meta d-flex">
            <time class="flex-start" datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time>
            {{#if reading_time}}
               <span class="flex-end">{{reading_time}}</span>
            {{/if}}
            {{#if @site.comments_enabled}}
                {{comment_count}}
            {{/if}}
        </div>
    </div>
</article>
